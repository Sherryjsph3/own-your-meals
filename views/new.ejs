        <a href="/recipes"><button>Diary</button></a>
    </nav>
</header>

<body class="body-new">
    <!-- ============= CONTAINER ============== -->
    <div class="container">
        <!-- sidebar -->
        <div class="sidebar"></div>
        <!-- new-recipe container -->
        <div class="new-recipe">
            <h2 class="h2-new">New Recipe</h2>
            <!-- START FORM -->
            <form action="/recipes" method="POST" enctype="multipart/form-data">
                <!-- fieldset for meal info -->
                <fieldset class="meal-info">
                    <!-- legend for meal info -->
                    <legend>Meal Information</legend>
                    <!-- name -->
                    <label class="input-lable" for="username">Name</label>
                    <input class="input-new" type="text" name="name" id="name" />

                    <!-- image -->
                    <label class="input-lable" for="image">Image</label>
                    <input class="input-new" type="file" name="image" id="image">

                    <!-- time -->
                    <label class="input-lable" for="time">Time</label>
                    <input class="input-new" type="text" name="time" id="time" />

                    <!-- ingredients -->
                    <label class="input-lable" for="ingredients">Ingredients</label>
                    <input class="input-new" type="text" name="ingredients" id="ingredients" />
            
                    <!-- directions -->
                    <label class="input-lable" for="directions">Directions</label>
                    <input class="input-new" type="text" name="directions" id="directions" />

                    <!-- submit button -->
                    <input class="input-submit" type="submit" value="Add a Recipe">
            </form>
        </div>
    </div>

</body>
